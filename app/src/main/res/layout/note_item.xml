<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Main Note Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Note Icon -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="ðŸ“"
                android:textSize="20sp"
                android:gravity="center" />

            <!-- Note Info Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/noteTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Note Title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/noteBody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Note Content"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Edit Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/editNoteBtn"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="4dp"
                    android:text="âœï¸"
                    android:textSize="16sp"
                    android:textColor="#1976D2"
                    app:backgroundTint="#E3F2FD"
                    app:cornerRadius="20dp"
                    app:strokeWidth="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp" />

                <!-- Delete Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/deleteNoteBtn"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="ðŸ—‘ï¸"
                    android:textSize="16sp"
                    android:textColor="#F44336"
                    app:backgroundTint="#FFEBEE"
                    app:cornerRadius="20dp"
                    app:strokeWidth="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Expandable Note Body -->
        <TextView
            android:id="@+id/noteBodyExpanded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Note Content Expanded"
            android:textSize="14sp"
            android:textColor="#666666"
            android:background="#F8F9FA"
            android:padding="12dp"
            android:visibility="gone"
            android:drawableStart="@android:drawable/ic_dialog_info"
            android:drawableTint="#999999"
            android:drawablePadding="8dp"
            android:gravity="start|top" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
