<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bright_white_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        tools:context=".MapPage">

        <!-- Header Section -->
        <TextView
            android:id="@+id/headerTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Add Location Task"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Location Task Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/locationTaskCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#F8FAFC"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerTxt">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <!-- Task Title Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/locationTaskTitleLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:hint="Task Title"
                    app:boxBackgroundColor="#FFFFFF"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="#6366F1"
                    app:boxStrokeWidth="1dp"
                    app:hintTextColor="#6366F1"
                    app:startIconDrawable="@android:drawable/ic_menu_edit"
                    app:startIconTint="#6366F1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/locationTaskTitleInput"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:inputType="textCapSentences"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:padding="10dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Location Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/locationInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:hint="Location Address"
                    app:boxBackgroundColor="#FFFFFF"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="#FF5722"
                    app:boxStrokeWidth="1dp"
                    app:hintTextColor="#FF5722"
                    app:startIconDrawable="@android:drawable/ic_dialog_map"
                    app:startIconTint="#FF5722">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/locationAddressInput"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:inputType="textPostalAddress"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:padding="10dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Current Location Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/useCurrentLocationBtn"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginBottom="10dp"
                    android:text="📍 Use Current Location"
                    android:textSize="14sp"
                    android:textColor="#4CAF50"
                    app:backgroundTint="@android:color/transparent"
                    app:strokeColor="#4CAF50"
                    app:strokeWidth="1dp"
                    app:cornerRadius="12dp" />

                <!-- Task Description Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/locationTaskDescLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:hint="Task Description (Optional)"
                    app:boxBackgroundColor="#FFFFFF"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="#6366F1"
                    app:boxStrokeWidth="1dp"
                    app:hintTextColor="#6366F1"
                    app:startIconDrawable="@android:drawable/ic_menu_info_details"
                    app:startIconTint="#6366F1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/locationTaskDescInput"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:inputType="textCapSentences|textMultiLine"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:padding="10dp"
                        android:gravity="top" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Notification Settings -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notification Settings:"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/notificationSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notify when near location"
                        android:textSize="14sp"
                        android:checked="true"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🔔"
                        android:textSize="20sp" />

                </LinearLayout>

                <!-- Radius Setting -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notification Range:"
                        android:textSize="12sp"
                        android:textColor="#666666" />

                    <SeekBar
                        android:id="@+id/radiusSeekBar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="8dp"
                        android:max="500"
                        android:progress="100" />

                    <TextView
                        android:id="@+id/radiusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100m"
                        android:textSize="12sp"
                        android:textColor="#666666" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Map Preview Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/mapPreviewCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/locationTaskCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🗺️"
                        android:textSize="24sp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location Preview"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/gpsStatusIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📡"
                        android:textSize="16sp"
                        android:visibility="gone" />

                </LinearLayout>

                <TextView
                    android:id="@+id/selectedLocationText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No location selected"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:background="#F8F9FA"
                    android:padding="12dp"
                    android:minHeight="80dp"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp" />

                <!-- Quick Location Actions -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/openInMapsBtn"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:text="📍 Open in Maps"
                        android:textSize="12sp"
                        android:textColor="#1976D2"
                        app:backgroundTint="@android:color/transparent"
                        app:strokeColor="#1976D2"
                        app:strokeWidth="1dp"
                        app:cornerRadius="8dp"
                        android:visibility="gone" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/shareLocationBtn"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:text="📤 Share Location"
                        android:textSize="12sp"
                        android:textColor="#4CAF50"
                        app:backgroundTint="@android:color/transparent"
                        app:strokeColor="#4CAF50"
                        app:strokeWidth="1dp"
                        app:cornerRadius="8dp"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/actionButtonsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mapPreviewCard">

            <!-- Cancel Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancelLocationTaskBtn"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:text="Cancel"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#666666"
                app:backgroundTint="@android:color/transparent"
                app:strokeColor="#666666"
                app:strokeWidth="1dp"
                app:cornerRadius="12dp"
                app:icon="@android:drawable/ic_menu_close_clear_cancel"
                app:iconTint="#666666"
                app:iconSize="16dp" />

            <!-- Save Location Task Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveLocationTaskBtn"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:text="Save Location Task"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:backgroundTint="#FF5722"
                app:cornerRadius="12dp"
                app:elevation="4dp"
                app:icon="@android:drawable/ic_dialog_map"
                app:iconTint="#FFFFFF"
                app:iconSize="16dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
